<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/Game">
    <AbsoluteLayout android:layout_height="wrap_content" android:id="@+id/GameField" android:layout_width="match_parent">
        <Button
            android:id="@+id/Button00"
            android:layout_height="200px"
            android:layout_width="200px"
            android:layout_x="50px"
            android:layout_y="50px"
            android:text=""
            android:textSize="48px"
            android:background="#FFF">

        </Button>


        <Button android:id="@+id/Button01" android:layout_height="200px" android:layout_width="200px" android:layout_x="255px" android:layout_y="50px" android:text="1" android:textSize="48px" android:background="@drawable/two"></Button>
        <Button android:id="@+id/Button02" android:layout_height="200px" android:layout_width="200px" android:layout_x="460px" android:layout_y="50px" android:text="2" android:textSize="48px" android:background="@drawable/three"></Button>
        <Button android:id="@+id/Button03" android:layout_height="200px" android:layout_width="200px" android:layout_x="50px" android:layout_y="255px" android:text="3" android:textSize="48px" android:background="@drawable/four"></Button>
        <Button android:id="@+id/Button04" android:layout_height="200px" android:layout_width="200px" android:layout_x="255px" android:layout_y="255px" android:text="4" android:textSize="48px" android:background="@drawable/five"></Button>
        <Button android:id="@+id/Button05" android:layout_height="200px" android:layout_width="200px" android:layout_x="460px" android:layout_y="255px" android:text="5" android:textSize="48px" android:background="@drawable/six"></Button>
        <Button android:id="@+id/Button06" android:layout_height="200px" android:layout_width="200px" android:layout_x="50px" android:layout_y="460px" android:text="6" android:textSize="48px" android:background="@drawable/seven"></Button>
        <Button android:id="@+id/Button07" android:layout_height="200px" android:layout_width="200px" android:layout_x="255px" android:layout_y="460px" android:text="7" android:textSize="48px" android:background="@drawable/eight"></Button>
        <Button android:id="@+id/Button08" android:layout_height="200px" android:layout_width="200px" android:layout_x="460px" android:layout_y="460px" android:text="8" android:textSize="48px" android:background="@drawable/nine"></Button>
    </AbsoluteLayout>
    <TextView android:layout_below="@+id/GameField" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/MoveText" android:textSize="28px" android:text="moves_title"></TextView><TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_below="@+id/MoveText" android:id="@+id/FeedbackTitleText" android:text="feedback_title" android:textSize="28px"></TextView><TextView android:layout_below="@+id/GameField" android:layout_toRightOf="@+id/MoveText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/MoveCounter" android:text="0" android:textSize="28px" android:layout_marginLeft="5px" android:layout_alignBaseline="@+id/MoveText"></TextView>




    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textSize="28px" android:id="@+id/FeedbackText" android:layout_alignRight="@+id/GameField" android:layout_below="@+id/FeedbackTitleText" android:text="game_feedback_text"></TextView>
</RelativeLayout>
